rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les utilisateurs
    match /users/{userId} {
      // Lecture: tout utilisateur authentifié peut lire les profils utilisateurs
      allow read: if request.auth != null;

      // Écriture: uniquement le propriétaire peut modifier son document
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Sous-collections de l'utilisateur
      match /notifications/{notificationId} {
        // Permettre la lecture par le propriétaire
        allow read: if request.auth != null && request.auth.uid == userId;
        // Permettre l'écriture par le propriétaire ET par les cloud functions (admin)
        allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      }
      
      match /created-fiesta/{fiestaId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /participated-fiesta/{fiestaId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /sponsorship/{sponsorshipId} {
        // Permettre la lecture par l'utilisateur propriétaire
        allow read: if request.auth != null && request.auth.uid == userId;
        // Permettre l'écriture par l'utilisateur propriétaire ET par les cloud functions (admin)
        allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      }
    }
    
    // Règles pour les fiestas
    match /fiestas/{fiestaId} {
      // Lecture: utilisateurs authentifiés
      allow read: if request.auth != null;
      
      // Écriture: utilisateurs authentifiés peuvent créer/modifier
      allow write: if request.auth != null;
    }
    
    // Règles pour les autres collections
    match /{document=**} {
      // Par défaut, accès restreint aux utilisateurs authentifiés
      allow read, write: if request.auth != null;
    }
  }
}

{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "*.ts",
    "callables/**/*.ts",
    "trigggers/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "**/*.test.ts"
  ]
}
